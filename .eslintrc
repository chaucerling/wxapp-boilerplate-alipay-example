{
  "extends": ["cantonjs", "plugin:vue/base"],
  "plugins": ["vue"],
  "globals": {
    "__DEV__": true,
    "__WECHAT__": true,
    "__ALIPAY__": true,
    "App": true,
    "Page": true,
    "Component": true,
    "wx": true,
    "my": true,
    "getApp": true,
    "getCurrentPages": true,
    "miniapp": true
  },
  "rules": {
    "promise/catch-or-return": {
      "terminationMethod": ["catch", "finally"]
    }
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.babel.js"
      }
    }
  }
}
